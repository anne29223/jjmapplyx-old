{
  "name": "WeWorkRemotely Full Job Automation",
  "active": false,
  "nodes": [
    {
      "parameters": {
        "url": "https://weworkremotely.com/remote-jobs",
        "options": {
          "responseFormat": "string",
          "headers": {}
          }
        },
        "name": "Scrape WeWorkRemotely HTML",
        "type": "n8n-nodes-base.httpRequest",
        "typeVersion": 1,
        "position": [250, 300]
    },
    {
      "parameters": {
          "functionCode": "const html = items[0].json.body || items[0].json;\nconst keywords = ['automation', 'project manager', 'business analyst'];\nconst jobRegex = /<li[^>]*>([\\s\\S]*?<a[^>]*href=\\"([^\\"]+)\\"[^>]*>[\\s\\S]*?<span class=\\"title\\">([^<]+)<\\/span>[\\s\\S]*?<span class=\\"company\\">([^<]+)<\\/span>[\\s\\S]*?)<\\/li>/g;\nconst jobs = [];\nlet match;\nwhile ((match = jobRegex.exec(html)) !== null) {\n  const url = 'https://weworkremotely.com' + match[2];\n  const title = match[3].toLowerCase();\n  const company = match[4];\n  if (keywords.some(k => title.includes(k))) {\n    jobs.push({ title, company, url });\n  }\n}\nreturn jobs.map(job => ({ json: job }));"
      },
      "name": "Parse and Filter Jobs",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [500, 300]
    },
    {
      "parameters": {
        "sheetId": "your-google-sheet-id",
        "range": "Sheet1!A1:E1",
        "valueInputOption": "RAW",
        "values": "={{ [$json.title, $json.company, $json.url, $now, 'pending'] }}"
      },
      "name": "Log to Google Sheets",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 1,
      "position": [750, 300]
    },
    {
      "parameters": {
        "fromEmail": "noreply@yourdomain.com",
        "toEmail": "your@email.com",
        "subject": "Applied to {{$json.title}} at {{$json.company}}",
        "text": "Applied to {{$json.title}} at {{$json.company}}. Link: {{$json.url}} on {{$now}}."
      },
      "name": "Send Confirmation Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [1000, 300]
    }
  ],
  "connections": {
    "Scrape WeWorkRemotely HTML": {
      "main": [
        [
          {
            "node": "Parse and Filter Jobs",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Parse and Filter Jobs": {
      "main": [
        [
          {
            "node": "Log to Google Sheets",
            "type": "main",
            "index": 0
          },
          {
            "node": "Send Confirmation Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "version": 1
}
