      "parameters": {
        "fromEmail": "info35185@gmail.com",
        "toEmail": "info35185@gmail.com",
        "subject": "Applied to {{$json.title}} at {{$json.company}}",
        "text": "You applied to {{$json.title}} at {{$json.company}}.\nLink: {{$json.url}}\nDate: {{new Date().toLocaleString()}}"
      }
    }
  ],
